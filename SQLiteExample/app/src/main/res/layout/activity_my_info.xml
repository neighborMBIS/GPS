<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.computer.sqliteexample.View.AfterLogin.MyInfoActivity"
    android:background="#000">


    <ScrollView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/scrollView"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentTop="true">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="140dp"
                android:id="@+id/imageView"
                android:src="@drawable/main"/>

            <SurfaceView
                android:layout_width="match_parent"
                android:layout_height="3dp"
                android:layout_gravity="center_horizontal"
                android:background="#ff7f0000"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"/>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:weightSum="1">

                <TextView
                    android:layout_marginTop="2dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#FFF"
                    android:textSize="30dp"
                    android:textStyle="bold"
                    android:text="아이디    : " />

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/outputid"
                    android:editable="false"
                    android:background="#FFF"
                    android:textSize="20dp"
                    android:textStyle="bold"/>
            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal" >

                <TextView
                    android:layout_marginTop="2dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#FFF"
                    android:textSize="30dp"
                    android:textStyle="bold"
                    android:text="비밀번호 : " />

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/outputpw"
                    android:background="#FFF"
                    android:textSize="20dp"
                    android:textStyle="bold" />
            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal" >

                <TextView
                    android:layout_marginTop="2dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#FFF"
                    android:textSize="30dp"
                    android:textStyle="bold"
                    android:text="이름       : "/>

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/outputname"
                    android:background="#FFF"
                    android:textSize="20dp"
                    android:textStyle="bold"/>
            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal" >

                <TextView
                    android:layout_marginTop="2dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#FFF"
                    android:textSize="30dp"
                    android:textStyle="bold"
                    android:text="전화번호 : "/>

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/outputphone"
                    android:background="#FFF"
                    android:textSize="20dp"
                    android:textStyle="bold"/>
            </LinearLayout>

            <SurfaceView
                android:layout_width="match_parent"
                android:layout_height="3dp"
                android:layout_gravity="center_horizontal"
                android:background="#ff7f0000"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"/>

            <ImageButton
                android:layout_width="match_parent"
                android:layout_height="110dp"
                android:background="#000"
                android:src="@drawable/a"
                android:padding="0sp" android:scaleType="fitXY"
                android:layout_gravity="center"
                android:id="@+id/finish"
                android:onClick="Commit"/>

            <ImageButton
                android:layout_width="match_parent"
                android:layout_height="110dp"
                android:background="#000"
                android:src="@drawable/aa"
                android:padding="0sp" android:scaleType="fitXY"
                android:layout_gravity="center"
                android:id="@+id/back"
                android:onClick="Rollback"
                />

            <ImageButton
                android:layout_width="match_parent"
                android:layout_height="110dp"
                android:background="#000"
                android:src="@drawable/aaa"
                android:padding="0sp" android:scaleType="fitXY"
                android:layout_gravity="center"
                android:id="@+id/reset"
                android:onClick="AllReset"/>
        </LinearLayout>
    </ScrollView>

</RelativeLayout>
